/* pages/message/index.wxss */

page {
  background: #f7f7f7;
}

textarea {
  border-bottom: solid 1rpx #ff5722;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
}

.container {
  padding: 5rpx;
}

.user {
  text-align: left;
  border-bottom: 1rpx solid #eee;
  padding: 8rpx;
}

.admin {
  text-align: right;
  border-bottom: 1rpx solid #eee;
  padding: 8rpx;
}

button {
  width: 200rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
}

.img{
  width: 200rpx;
  height: 200rpx;
}

.nick-name {
  color: darkgray;
  line-height: 60rpx;
}

.user-info {
  height: 60rpx;
}

.user-content {
  margin-left: 15rpx;
  background: #fff;
  border-radius: 6rpx;
}

.admin-content {
  margin-right: 15rpx;
}

.bottom {
  background: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

