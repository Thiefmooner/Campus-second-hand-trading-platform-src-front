.goods-container {
  padding: 20rpx 0 0 0;
}

.goods-box {
  height: 200rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  align-items: center;
  padding: 20rpx;
}

.goods-box .img-box {
  width: 200rpx;
  height: 200rpx;
}

.goods-box .img-box image {
  width: 200rpx;
  height: 200rpx;
}

.goods-box .goods-title {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 32rpx;
  color: #000;
  margin-left: 24rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
  max-width: 420rpx;
}

.goods-box .goods-price {
  overflow: hidden;
  font-size: 28rpx;
  color: #e64340;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.goods-box .del {
  width: 40rpx;
  height: 40rpx;
}

.goods-status{
  overflow: hidden;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}